<%= form_for @recipe do |f| %>
 Name: <%= f.text_field :name, required: true%>
 Description: <% f.text_area :description %>
 Category: <%= f.select(:category, Recipe::Category) %>
 Directions: <% f.text_area :directions, %>
 <%= f.fields_for :ingredients do |i| %>
    <%=render 'ingredient_fields', f: i %>
 <% end %>
 <%= link_to_add_fields "Add Ingredients", f, ingredients%>
 <% submit_tag "Add Recipe"%>
 
<% end %>

